{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": false,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./js",
    "removeComments": false,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "js/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "js/**/*.js"
  ]
} 